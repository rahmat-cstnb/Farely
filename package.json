{
  "name": "farely",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Farely â€” A modern fare and toll calculator",
  "dependencies": {
    "@turf/turf": "^7.2.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^5.1.0",
    "get-port": "^7.1.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.farely.app",
    "productName": "Farely",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "backend/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/.*",
      "!**/*.map"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "assets/farely.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/farely.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": null
  }
}
